<div class="container-fluid header">
    <img src="/assets/img/burger.jpeg" style="height:250px"alt="burger" class="img-fluid  mx-auto d-block burger-pic" />
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6 text-center">
      <h2>Burgers Ready To Eat</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <div>
          {{burger_name}}
          <button class="devour-btn btn btn-outline-danger btn-sm" id="{{id}}">Devour It! </button>
        </div>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6 text-center">
      <h2>Devoured Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <div>{{burger_name}}</div>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <br>
 
<form class="form-inline">
  
  <div class="form-group mx-sm-3 mb-2">
    <input type="text" class="form-control" style="width:400px" id="burger-name" name="burger_name" placeholder="Burger To Be Devoured">
  </div>
  <button id="addBtn" type="submit" class=" btn btn-danger mb-2">Add New Burger</button>
</form>

</div>